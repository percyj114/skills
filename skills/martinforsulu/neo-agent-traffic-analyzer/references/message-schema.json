{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Communication Message",
  "description": "Schema for individual agent-to-agent communication messages used by agent-traffic-analyzer",
  "type": "object",
  "required": ["from", "to"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique message identifier"
    },
    "from": {
      "type": "string",
      "description": "Name or ID of the sending agent"
    },
    "to": {
      "type": "string",
      "description": "Name or ID of the receiving agent"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the message was sent"
    },
    "type": {
      "type": "string",
      "enum": ["request", "response", "broadcast"],
      "description": "Message type classification"
    },
    "payload_size": {
      "type": "number",
      "minimum": 0,
      "description": "Size of message payload in bytes"
    },
    "latency_ms": {
      "type": "number",
      "minimum": 0,
      "description": "End-to-end latency in milliseconds"
    },
    "status": {
      "type": "string",
      "enum": ["delivered", "failed", "timeout"],
      "description": "Delivery status of the message"
    }
  }
}
