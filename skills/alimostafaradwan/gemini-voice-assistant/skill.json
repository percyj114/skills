{
  "name": "gemini-voice-assistant",
  "version": "1.0.0",
  "description": "Voice-to-voice AI assistant using Gemini Live API - speak and get spoken responses",
  "author": "Ali",
  "entry": "handler.py",
  "handler": "handle_request",
  "triggers": {
    "whatsapp": {
      "voice": true,
      "audio": true,
      "text": ["assistant", "gemini", "ai", "help", "what is", "how to", "explain", "tell me"]
    }
  },
  "config": {
    "model": "gemini-2.5-flash-native-audio-preview-12-2025",
    "response_modalities": ["AUDIO"],
    "system_instruction": "You are a helpful, friendly AI assistant. Answer questions clearly and concisely.",
    "language": "en"
  },
  "dependencies": [
    "google-genai>=1.0.0",
    "librosa>=0.10.0",
    "soundfile>=0.12.0",
    "numpy>=1.24.0"
  ],
  "env": [
    "GEMINI_API_KEY"
  ]
}
