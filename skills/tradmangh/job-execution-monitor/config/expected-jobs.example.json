{
  "checkIntervalMin": 10,
  "jobs": {
    "daily-wrap-up": {
      "schedule": "0 22 * * *",
      "tolerance": 600,
      "critical": true,
      "expectedMinLength": 200,
      "errorPatterns": ["error", "failed", "Pong", "token overflow"]
    },
    "accountability-checkin": {
      "schedule": "0 9 * * *",
      "tolerance": 300,
      "critical": false,
      "expectedMinLength": 50
    },
    "flight-tracker-*": {
      "dynamic": true,
      "checkOnce": true,
      "comment": "One-shot jobs with dynamic names (wildcards supported)"
    }
  }
}
