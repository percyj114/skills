{
  "name": "openclaw-security-guard",
  "version": "1.0.0",
  "description": "ðŸ›¡ï¸ Complete security layer for OpenClaw - CLI Scanner + Live Dashboard. No telemetry, 100% private.",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "openclaw-guard": "./src/cli/index.js",
    "openclaw-security-guard": "./src/cli/index.js"
  },
  "scripts": {
    "start": "node src/cli/index.js",
    "dev": "node --watch src/cli/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "test:security": "vitest run tests/unit/security.test.js",
    "lint": "eslint src/ tests/ --max-warnings 0",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "audit:deps": "npm audit --audit-level=moderate",
    "audit:code": "node src/cli/index.js audit --ci",
    "pretest": "npm run lint",
    "prepublishOnly": "npm run test && npm run audit:deps",
    "postinstall": "echo 'ðŸ›¡ï¸ OpenClaw Security Guard installed! Run: openclaw-guard --help'"
  },
  "keywords": [
    "openclaw",
    "security",
    "audit",
    "scanner",
    "dashboard",
    "monitoring",
    "ai-security",
    "llm-security",
    "mcp",
    "prompt-injection",
    "secrets-detection",
    "devsecops",
    "no-telemetry",
    "privacy"
  ],
  "author": {
    "name": "Miloud Belarebia",
    "url": "https://2pidata.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2pidata/openclaw-security-guard.git"
  },
  "bugs": {
    "url": "https://github.com/2pidata/openclaw-security-guard/issues"
  },
  "homepage": "https://github.com/2pidata/openclaw-security-guard#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/2pidata"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^10.4.5",
    "inquirer": "^9.3.7",
    "ora": "^8.1.0",
    "boxen": "^8.0.1",
    "table": "^6.8.2",
    "figures": "^6.1.0",
    "ws": "^8.18.0",
    "open": "^10.1.0",
    "semver": "^7.6.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "vitest": "^2.1.4",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^9.14.0",
    "prettier": "^3.3.3",
    "@types/node": "^22.9.0",
    "@types/ws": "^8.5.13"
  },
  "files": [
    "src/",
    "docs/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "SECURITY.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "private": false
}
