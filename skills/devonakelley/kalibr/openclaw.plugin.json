{
  "id": "kalibr",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "apiKey": { "type": "string" },
      "tenantId": { "type": "string" },
      "apiUrl": { "type": "string", "default": "https://kalibr-intelligence.fly.dev" },
      "defaultGoal": { "type": "string", "default": "openclaw_agent_run" },
      "enabled": { "type": "boolean", "default": true },
      "enableRouting": { "type": "boolean", "default": false },
      "captureOutcomes": { "type": "boolean", "default": true },
      "captureLlmTelemetry": { "type": "boolean", "default": true }
    },
    "required": ["apiKey"]
  },
  "uiHints": {
    "apiKey": { "label": "Kalibr API Key", "sensitive": true },
    "tenantId": { "label": "Tenant ID" },
    "apiUrl": { "label": "Intelligence Service URL", "placeholder": "https://kalibr-intelligence.fly.dev" },
    "defaultGoal": { "label": "Default Goal", "placeholder": "openclaw_agent_run" },
    "captureLlmTelemetry": { "label": "Capture LLM Call Telemetry" },
    "captureOutcomes": { "label": "Report Run Outcomes" },
    "enableRouting": { "label": "Enable Intelligent Model Routing", "description": "Use Kalibr decide() to override model selection before each agent run" }
  }
}
