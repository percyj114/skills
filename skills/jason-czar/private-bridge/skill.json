{
  "slug": "private-bridge",
  "display_name": "PrivateBridge",
  "version": "1.0.1",
  "description": "Enables secure remote communication between OpenClaw and a relay server without exposing ports.",
  "tags": ["relay", "remote", "websocket", "control"],
  "capabilities": [
    "remote_chat",
    "remote_status",
    "remote_restart",
    "remote_trigger"
  ],
  "config": {
    "relay_url": {
      "type": "string",
      "required": true,
      "description": "WebSocket URL of the relay server"
    },
    "node_id": {
      "type": "string",
      "required": true,
      "description": "Unique identifier for this OpenClaw node"
    },
    "auth_token": {
      "type": "string",
      "required": true,
      "sensitive": true,
      "description": "Secret token for relay authentication"
    }
  },
  "entry": "relayClient.ts"
}
