{
  "name": "code-review",
  "version": "1.0.0",
  "description": "Automated code review with feedback generation",
  "author": "MCP Workflow",
  "steps": [
    {
      "name": "analyze-code",
      "type": "analysis",
      "action": "static-analysis",
      "description": "Analyze code structure and patterns"
    },
    {
      "name": "check-style",
      "type": "lint",
      "action": "style-check",
      "description": "Check code style compliance"
    },
    {
      "name": "identify-issues",
      "type": "analysis",
      "action": "find-issues",
      "description": "Identify potential bugs and issues"
    },
    {
      "name": "generate-feedback",
      "type": "generate",
      "action": "create-review-comments",
      "description": "Generate constructive feedback"
    },
    {
      "name": "suggest-improvements",
      "type": "generate",
      "action": "suggest-refactoring",
      "description": "Suggest code improvements"
    },
    {
      "name": "create-report",
      "type": "output",
      "action": "generate-review-report",
      "format": "markdown",
      "description": "Generate comprehensive review report"
    }
  ],
  "resources": [
    "file://{files}",
    "git://repo/{branch}/{path}"
  ],
  "completions": {
    "files": "file-completion",
    "branch": "git-branches"
  }
}
