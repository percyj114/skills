{
  "name": "openclaw-webchat",
  "version": "15.0.0",
  "description": "OpenClaw Web Chat - 生产就绪版 AI 聊天界面",
  "main": "server-v15.js",
  "scripts": {
    "start": "node server-v15.js",
    "dev": "nodemon server-v15.js",
    "install": "chmod +x install.sh && ./install.sh",
    "postinstall": "node postinstall.js"
  },
  "keywords": [
    "openclaw",
    "webchat",
    "ai-chat",
    "streaming",
    "multi-model"
  ],
  "author": "贝贝",
  "license": "MIT",
  "dependencies": {
    "express": "^5.2.1",
    "socket.io": "^4.8.3",
    "cors": "^2.8.6",
    "express-rate-limit": "^8.2.1",
    "marked": "^17.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "openclaw": {
    "type": "webapp",
    "port": 4000,
    "service": "openclaw-webchat.service",
    "config": {
      "defaultPassword": "admin123",
      "rateLimit": 60,
      "models": [
        "qwen3.5-plus",
        "glm-4-flash",
        "gpt-4",
        "qwen-vl"
      ]
    },
    "features": [
      "流式输出",
      "多模型切换",
      "用户认证",
      "速率限制",
      "Token 统计",
      "Markdown 渲染",
      "对话导出",
      "深色模式",
      "错误重试"
    ]
  }
}
