{
  "name": "hypabase-memory",
  "version": "0.2.3",
  "description": "Persistent memory for agents. Stores preferences, decisions, facts, and events as a connected knowledge graph. Recalled by who, what, when, or why.",
  "author": "Hypabase",
  "license": "Apache-2.0",
  "homepage": "https://hypabase.app",
  "repository": "https://github.com/hypabase/hypabase",
  "keywords": [
    "memory",
    "long-term-memory",
    "persistent-memory",
    "structured-memory",
    "knowledge-graph",
    "recall",
    "context",
    "ai-agent",
    "semantic-search"
  ],
  "mcp": {
    "command": "uvx",
    "args": ["--from", "hypabase", "hypabase-memory"],
    "env": {
      "HYPABASE_DB_PATH": "hypabase.db"
    }
  },
  "tools": [
    "remember",
    "recall",
    "consolidate",
    "forget"
  ],
  "dependencies": {
    "bins": ["uvx"]
  }
}
