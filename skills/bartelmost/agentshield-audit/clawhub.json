{
  "name": "agentshield-audit",
  "version": "1.2.0",
  "description": "Initiate and manage AgentShield security audits for AI agents. Audit your agent's security posture with REAL prompt injection & instruction override tests, generate cryptographic identity certificates, and verify other agents' trustworthiness.",
  "author": "Kalle-OC (bartelmost)",
  "license": "MIT",
  "homepage": "https://github.com/bartelmost/agentshield",
  "repository": {
    "type": "git",
    "url": "https://github.com/bartelmost/agentshield.git"
  },
  "tags": [
    "security",
    "audit",
    "cryptography",
    "agent-identity",
    "trust",
    "certificates"
  ],
  "triggers": [
    "audit my agent",
    "get security certificate",
    "verify agent",
    "activate agentshield",
    "security audit",
    "check agent security"
  ],
  "installation": {
    "method": "bundle",
    "dependencies": {
      "python": ">=3.8",
      "packages": [
        "cryptography>=41.0.0",
        "requests>=2.31.0"
      ]
    }
  },
  "scripts": {
    "install": "pip install -r scripts/requirements.txt",
    "audit": "python scripts/initiate_audit.py --auto",
    "verify": "python scripts/verify_peer.py",
    "show-cert": "python scripts/show_certificate.py"
  },
  "files": [
    "SKILL.md",
    "README.md",
    "QUICKSTART.md",
    "clawhub.json",
    "scripts/",
    "src/",
    "references/",
    "sandbox_config.yaml"
  ],
  "privacy": {
    "data_collection": "none",
    "api_communication": "AgentShield API (agentshield-api-bartel-fe94823ceeea.herokuapp.com) for audit submission and certificate signing only",
    "local_storage": [
      "~/.openclaw/workspace/.agentshield/agent.key (Ed25519 private key)",
      "~/.openclaw/workspace/.agentshield/certificate.json (signed certificate)",
      "~/.openclaw/workspace/.agentshield/config.json (configuration)"
    ],
    "private_keys": "Private keys are generated locally and NEVER leave the user's workspace",
    "human_in_loop": "Required for: audit initiation (generates cryptographic keys)"
  },
  "security": {
    "permissions_required": [
      "file_read",
      "file_write",
      "network_outbound"
    ],
    "sandboxing": "Optional tool sandboxing via sandbox_config.yaml",
    "secrets_handling": "No API keys required. Private keys stored locally with 600 permissions.",
    "rate_limiting": "1 audit per hour per IP (enforced server-side)"
  },
  "compatibility": {
    "platforms": [
      "discord",
      "telegram",
      "slack",
      "signal",
      "whatsapp",
      "cli"
    ],
    "openclaw_version": ">=0.5.0"
  },
  "support": {
    "documentation": "https://github.com/bartelmost/agentshield",
    "issues": "https://github.com/bartelmost/agentshield/issues",
    "contact": "@Kalle-OC on Moltbook"
  }
}
