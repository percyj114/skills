  "features": [
    "Instant checks (<5ms) - no external API calls",
    "Background sync worker - no rate limits on checks",
    "Transaction message analysis - decode hex data",
    "Auto-queue system - unknown addresses queued automatically",
    "Encrypted API key storage - AES-256",
    "Multi-source verification - Etherscan + ChainAbuse + local DB",
    "Risk scoring algorithm - 0-100 with detailed breakdown",
    "Suspicious keyword detection - Lazarus, exploits, phishing",
    "Contract verification check - unverified contracts flagged",
    "JSON output support - machine-readable results",
    "Convenience script - auto-sync on first check",
    "Database statistics - usage metrics"
  ],
  "performance": {
    "check_latency": "<5ms",
    "api_calls_per_check": 0,
    "sync_time_per_address": "~2s",
    "database_size_per_address": "~1KB",
    "improvement_over_v1": "500-1000x faster"
